<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ScrollPane?>
<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.quizia.frontend.controller.RegisterRoomController" stylesheets="@../styles/register_room.css" styleClass="root">
    <children>
        <ScrollPane fitToWidth="true" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <content>
                <VBox spacing="20.0" style="-fx-padding: 40;">
                    <!-- Header -->
                    <Label text="Create Your Quiz Room" styleClass="page-title" />
                    <Label text="Set up a new room and invite friends to play" styleClass="page-subtitle" />
                    
                    <!-- Form Card -->
                    <VBox spacing="16" styleClass="form-card" style="-fx-padding: 30;">
                        <!-- Room Name Field -->
                        <VBox spacing="8">
                            <Label text="Room Name" styleClass="form-label" />
                            <TextField fx:id="roomNameField" promptText="Enter a catchy room name" styleClass="form-input" />
                        </VBox>
                        
                        <!-- Room ID Field -->
                        <VBox spacing="8">
                            <Label text="Room ID (optional)" styleClass="form-label" />
                            <TextField fx:id="roomIdField" promptText="Auto-generated if left empty" styleClass="form-input" />
                        </VBox>

                        <!-- Topics Section -->
                        <VBox spacing="12">
                            <Label text="Select Topics (at least one)" styleClass="form-label" />
                            <VBox spacing="10" styleClass="checkbox-group">
                                <CheckBox fx:id="topicGeneral" text="✓ General Knowledge" styleClass="form-checkbox" />
                                <CheckBox fx:id="topicScience" text="✓ Science &amp; Technology" styleClass="form-checkbox" />
                                <CheckBox fx:id="topicPop" text="✓ Pop Culture &amp; Entertainment" styleClass="form-checkbox" />
                                <CheckBox fx:id="topicGeo" text="✓ Geography" styleClass="form-checkbox" />
                                <CheckBox fx:id="topicSports" text="✓ Sports" styleClass="form-checkbox" />
                                <CheckBox fx:id="topicHistory" text="✓ History &amp; Politics" styleClass="form-checkbox" />
                            </VBox>
                        </VBox>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="16" style="-fx-padding: 20 0 40 0;">
                        <Button fx:id="backButton" text="← Cancel" styleClass="btn-secondary" />
                        <Button fx:id="registerButton" text="Create Room" styleClass="btn-success" />
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
