<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Button?>
<AnchorPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.quizia.frontend.controller.PickTopicController" stylesheets="@../styles/app.css,@../styles/pick_topic.css" styleClass="root" style="-fx-background-color: white;">
    <children>
        <VBox layoutX="40" layoutY="40" spacing="12.0" prefWidth="520" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20">
            <Label text="Pick a Topic for the Quiz:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Hyperlink fx:id="topicGeneral" text="General Knowledge" onAction="#onPickTopic" styleClass="hyperlink" />
            <Hyperlink fx:id="topicScience" text="Science &amp; Technology" onAction="#onPickTopic" styleClass="hyperlink" />
            <Hyperlink fx:id="topicPop" text="Pop Culture &amp; Entertainment" onAction="#onPickTopic" styleClass="hyperlink" />
            <Hyperlink fx:id="topicGeo" text="Geography" onAction="#onPickTopic" styleClass="hyperlink" />
            <Hyperlink fx:id="topicSports" text="Sports" onAction="#onPickTopic" styleClass="hyperlink" />
            <Hyperlink fx:id="topicHistory" text="History &amp; Politics" onAction="#onPickTopic" styleClass="hyperlink" />
            <Button fx:id="backButton" text="Back" onAction="#onBack" styleClass="ghost compact" />
        </VBox>
    </children>
</AnchorPane>
